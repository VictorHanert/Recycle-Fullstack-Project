[MAIN]
# Use multiple processes to speed up Pylint
jobs=1

# Python code to execute, usually for sys.path manipulation such as pygtk.require()
init-hook='import sys; sys.path.append(".")'

[MESSAGES CONTROL]
# Disable specific warnings that are common in FastAPI projects and make development easier
disable=
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,
    too-few-public-methods,
    import-error,
    unused-import,
    too-many-arguments,
    too-many-positional-arguments,
    duplicate-code,
    unnecessary-pass,
    import-outside-toplevel,
    raise-missing-from,
    unused-argument,
    line-too-long,
    wrong-import-order,
    singleton-comparison,
    trailing-whitespace,
    trailing-newlines,
    logging-fstring-interpolation,
    unused-variable,
    redefined-outer-name,
    consider-using-f-string,
    broad-except

[FORMAT]
# Maximum number of characters on a single line (more lenient)
max-line-length=150

# Allow the body of an if to be on the same line as the test if there is no else
single-line-if-stmt=yes

[DESIGN]
# Maximum number of arguments for function / method (more lenient)
max-args=10

# Maximum number of attributes for a class (more lenient)
max-attributes=20

# Maximum number of locals for function / method body (more lenient)
max-locals=20

# Maximum number of return / yield for function / method body (more lenient)
max-returns=8

# Maximum number of branch for function / method body (more lenient)
max-branches=15

# Maximum number of statements in function / method body (more lenient)
max-statements=60

[SIMILARITIES]
# Minimum lines number of a similarity (more lenient)
min-similarity-lines=10

# Ignore comments when computing similarities
ignore-comments=yes

# Ignore docstrings when computing similarities
ignore-docstrings=yes

# Ignore imports when computing similarities
ignore-imports=yes
